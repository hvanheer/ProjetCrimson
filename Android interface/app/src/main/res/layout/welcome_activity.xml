<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".WelcomeActivity">


    <TextView
        android:id="@+id/textViewCrimson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/phosphate"
        android:text="CRIMSON"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_rounded"
        android:fontFamily="@font/helvetica"
        android:hint="Entrez votre pseudo"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="visible"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewInstruction"
        android:layout_width="353dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/helvetica"
        android:gravity="center_vertical|center_horizontal"
        android:text="Connectez-vous sur votre plateforme de streaming : "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonSpotify"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="516dp"
        android:height="60dp"
        android:backgroundTint="@color/green"
        android:drawableLeft="@drawable/spotify"
        android:drawablePadding="10dp"
        android:fontFamily="@font/helvetica"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:text=" Se connecter à Spotify"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDeezer"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="580dp"
        android:drawableLeft="@drawable/deezer"
        android:fontFamily="@font/helvetica"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:text=" Se connecter à Deezer"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
